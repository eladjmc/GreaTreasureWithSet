@model IEnumerable<GreaTreasure.Models.Shelf>

@{
    ViewData["Title"] = "Shelves";
}

<h1>
    @if (Model.Any())
    {
        @Model.First().LibName
    }
    else
    {
        @:ספרייה ריקה
    }
</h1>
<p>
    <a asp-action="CreateShelf" asp-route-id="@TempData["libID"]">הוסף מדף</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
           <th>
                @Html.DisplayNameFor(Model => Model.OccupiedWidth)
           </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                    @Html.ActionLink(item.Name, "Books", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Width)  /  @Html.DisplayFor(modelItem => item.OccupiedWidth)
            </td>
        </tr>
}
    </tbody>
</table>
